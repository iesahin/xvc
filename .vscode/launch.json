    "version": "0.2.0",
      "configurations": [
        {
            "name": "Launch xvc",
            "type": "lldb-vscode",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/xvc",
            "args": [ "" ],
            // "cwd": "${workspaceRoot}/path-to",
        },
        {
            "name": "Attach to a named executable",
            "type": "lldb-vscode",
            "request": "attach",
            "program": "${workspaceRoot}/target/debug/xvc",
        },
        {
            "name": "Debug ALL workflow tests",
            "type": "lldb-vscode",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--package=xvc-workflow-tests"
                ]
            },
            "args": [ ],
            "cwd": "${workspaceFolder}/workflow_tests/"
        },
        {
            "name": "Debug specific unit test in library 'mylib'",
            "type": "lldb-vscode",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--package=xvc-workflow-tests"
                ],
            },
            "args": [ "--test", "${selectedText}" ],
            "cwd": "${workspaceFolder}/workflow_tests"
        },
    ] 



}